<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon
    id="plugin.video.ODIN"
    name="ODIN Installer"
    version="1.0.2"
    provider-name="ODIN!!!">
   <requires>
     <import addon="xbmc.python" version="2.1.0"/>
	 <import addon="script.module.urlresolver"  version="0.0.1"/>
	 <import addon="script.module.addon.common" version="2.0.0" />
	 <import addon="script.module.metahandler"  version="0.0.1"/>
	 <import addon="script.common.plugin.cache"/>
   </requires>
   <extension point="xbmc.python.pluginsource" library="plugin.py" >
	 <provides>video</provides>
   </extension>
   <extension point="xbmc.python.module" library="lib" />
   <extension point="xbmc.addon.metadata">
	<summary lang="en">ODIN Installer</summary>
    <description lang="en">ODIN Installer provides an easy way to install fully customised Kodi setups to your device</description>
	 <platform></platform>
     <language></language>
	 <license></license>
	 <forum></forum>
	 <website></website>
	 <source></source>
	 <email></email>
   </extension>
</addon>

<addon id="repository.ODIN" name="ODIN Repository" version="1.0.3" provider-name="ODIN">
	<extension point="xbmc.addon.repository" name="ODIN Addon Repository">
		<info compressed="false">https://raw.githubusercontent.com/Architectsatwork/ODIN/master/addon/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/Architectsatwork/ODIN/master/addon/addons.xml.md5</checksum>
                <datadir zip="true">https://raw.githubusercontent.com/Architectsatwork/ODIN/master/addon/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">ODIN Installer</summary>
    <description lang="en">ODIN Installer provides an easy way to install fully customised Kodi setups to your device</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
